pipeline {
    agent any

    stages {
        stage('Cloner le dépôt') {
            steps {
                echo '📥 Clonage du dépôt GitHub...'
            }
        }

        stage('Build') {
            steps {
                echo '⚙️ Construction du projet...'
            }
        }

        stage('Deploy') {
            steps {
                echo '🚀 Déploiement en cours...'
            }
        }
    }
}
